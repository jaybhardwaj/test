									<td><%=activity[i].bugTitle%></td>
									<td>Modified</td>
									<td><%=activity[i].firstName%></td>
									<td><%=activity[i].projectName%></td>
									<td><%=activity[i].createdDate%></td>
								</tr>
								<%}%>
							<%}else if(activity[i].flag=="comment"){%>
							<tr>
								<td><%=activity[i].bugTitle%></td>
								<td>Comment</td>
								<td><%=activity[i].firstName%></td>
								<td><%=activity[i].projectName%></td>
								<td><%=activity[i].createdDate%></td>
							</tr>
							<%}else{%>
							<tr>
