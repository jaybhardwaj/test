            <input class="form-text-box" type="text" placeholder="search in this table" id="searchbox" style="float:right;width: 13%"> 
     
                    <table id="data_table" class="table table-striped table-bordered" style="margin-top:1%" cellspacing="0" width="100%">
                        <thead style= "background-color: #808080">
                        <tr>
                                <th>File Name</th>
                                <th>File Title</th>
                                <th>Author</th>
                                <th>Uploaded By</th>
                                <th>Date</th>
                                <th>Description</th>
                                <th>Action</th>
                                </tr>
                         </thead>
                        <tbody id="orderbody">
                            <%for(var i=files[0].length-1;i>=0;i--) {%>
                                <tr class="" id = 'row_<%=files[0][i].id%>'>
