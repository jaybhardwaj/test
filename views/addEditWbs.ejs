                    if (r == true) {
                        $('#wbshidden').val(1);
                    } else {
                        $('#wbshidden').val(0);
                    }
                }
                return true;
            }

            var y = Math.floor((Math.random() * 1000) + 1);

            function myFunction() {
                var x = document.getElementById("wbsname");
                var x2 = document.getElementById("wbscode");
                if (x.value != '') {
                    var ss = x.value;
                    ss = ss.charAt(0);
                    var s1 = x.value;
                    s1 = s1.charAt(1);
                    ss = "".concat(ss, s1);

                    x2.value = ss + "_" + y;
                } else {
                    x2.value = "";
                }
